{
    "name": "sg-orbit",
    "version": "0.0.0",
    "private": true,
    "repository": "https://github.com/gsoft-inc/sg-orbit.git",
    "license": "Apache-2.0",
    "workspaces": {
        "packages": [
            "packages/*",
            "packages/bundles/*"
        ]
    },
    "scripts": {
        "bootstrap": "yarn bootstrap:pkg && yarn bootstrap:sb",
        "bootstrap:pkg": "yarn install:pkg && yarn setup:pkg",
        "bootstrap:sb": "yarn install:sb",
        "build": "run-s build:*",
        "build:pkg": "lerna run build --parallel",
        "build:sb": "cd storybook && yarn build-sb",
        "build:docs": "cd storybook && yarn build-docs",
        "build-sb-for-chroma": "cd storybook && yarn build-sb-for-chroma",
        "build-theme": "cd packages/semantic-ui-theme && yarn build",
        "chromatic": "cd storybook && yarn chromatic",
        "chromatic-ci": "cd storybook && yarn chromatic-ci",
        "clean": "run-p -c clean:*",
        "clean:pkg": "lerna run clean --parallel",
        "clean:storybook": "cd storybook && yarn clean",
        "delete-node-modules": "run-p -c delete-node-modules:* && yarn delete-root-node-modules",
        "delete-node-modules:pkg": "lerna exec --parallel -- rimraf node_modules",
        "delete-node-modules:storybook": "cd storybook && rimraf node_modules",
        "delete-root-node-modules": "rimraf node_modules",
        "delete-yarn-lock": "run-p -c delete-yarn-lock:*",
        "delete-yarn-lock:root": "rimraf yarn.lock",
        "delete-yarn-lock:storybook": "cd storybook && rimraf yarn.lock",
        "eslint": "run-s \"eslint:* --max-warnings={1:--1}\"",
        "eslint:pkg": "eslint --ext .js,.jsx packages",
        "eslint:sb": "eslint --ext .js,.jsx storybook",
        "eslint-fix": "eslint --ext .js,.jsx . --fix",
        "install:pkg": "yarn install --ignore-scripts",
        "install:sb": "cd storybook && yarn install",
        "lint": "run-s eslint stylelint",
        "lint-ci": "yarn eslint -- -- 0 && yarn stylelint",
        "new-version": "lerna version --exact --no-push --loglevel verbose",
        "force-new-version": "yarn new-version --force-publish",
        "push-release": "node scripts/push-release",
        "publish-pkg": "lerna publish from-package --exact --loglevel verbose",
        "release-pkg": "cross-env NODE_ENV=production run-s build:pkg publish-pkg",
        "release-pkg-alpha": "cross-env NODE_ENV=production run-s build:pkg \"publish-pkg --dist-tag alpha\"",
        "reset": "run-s -c clean delete-yarn-lock delete-node-modules",
        "setup:pkg": "lerna run setup --parallel",
        "start": "yarn start-pkg",
        "start-pkg": "lerna run start --parallel",
        "start-sb": "cd storybook && yarn start-sb",
        "start-sb-no-chroma": "cd storybook && yarn start-sb-no-chroma",
        "start-sb-for-chroma": "cd storybook && yarn start-sb-for-chroma",
        "start-docs": "cd storybook && yarn start-docs",
        "serve-sb": "cd storybook && yarn serve-sb",
        "serve-sb-for-chroma": "cd storybook && yarn serve-sb-for-chroma",
        "serve-docs": "cd storybook && yarn serve-docs",
        "stylelint": "run-s stylelint:*",
        "stylelint:pkg": "stylelint \"packages/**/*.css\" --allow-empty-input",
        "stylelint:sb": "stylelint \"storybook/**/*.css\" --allow-empty-input",
        "jest-watch": "yarn jest --watch",
        "jest-ci": "yarn jest --runInBand",
        "jest": "jest --config=jest/jest.config.js",
        "update": "run-s install:pkg install:sb",
        "diff": "lerna changed && lerna diff",
        "deploy-sb-preview": "run-s build:sb netlify-deploy-sb-preview",
        "netlify-ci-sb": "yarn bootstrap && yarn build:pkg && yarn build:sb",
        "netlify-ci-docs": "yarn bootstrap && yarn build:pkg && yarn build:docs",
        "netlify-deploy-sb-preview": "netlify deploy --dir=storybook/dist/sb --site=4b420380-aed1-4dc6-b002-6efe7b413025 --open"
    },
    "devDependencies": {
        "@babel/cli": "7.12.1",
        "@babel/core": "7.12.3",
        "@babel/plugin-proposal-class-properties": "7.12.1",
        "@babel/plugin-transform-runtime": "7.12.1",
        "@babel/preset-env": "7.12.1",
        "@babel/preset-react": "7.12.5",
        "@rehooks/local-storage": "2.4.0",
        "@sharegate/browserslist-config-recommended": "1.0.1",
        "@sharegate/eslint-config-lodash": "1.0.2",
        "@sharegate/eslint-config-react": "1.1.0",
        "@sharegate/eslint-config-recommended": "1.1.0",
        "@sharegate/eslint-config-sort-imports": "1.0.2",
        "@sharegate/stylelint-config-recommended": "2.0.0",
        "@storybook/addon-docs": "5.3.21",
        "@storybook/addon-knobs": "5.3.21",
        "@storybook/react": "5.3.21",
        "@svgr/webpack": "5.4.0",
        "@testing-library/jest-dom": "5.11.5",
        "@testing-library/react": "11.1.2",
        "@testing-library/react-hooks": "3.4.2",
        "@testing-library/user-event": "12.2.2",
        "babel-eslint": "10.1.0",
        "babel-jest": "26.6.3",
        "babel-loader": "8.2.1",
        "babel-plugin-add-react-displayname": "0.0.5",
        "babel-plugin-jsx-control-statements": "4.1.0",
        "babel-plugin-jsx-remove-data-test-id": "2.1.3",
        "babel-plugin-named-asset-import": "0.3.7",
        "babel-plugin-react-require": "3.1.3",
        "browserslist": "4.14.7",
        "chalk": "4.1.0",
        "copy-files": "0.1.0",
        "cross-env": "7.0.2",
        "css": "3.0.0",
        "eslint": "7.13.0",
        "eslint-plugin-jest": "24.1.3",
        "eslint-plugin-jsx-control-statements": "2.2.1",
        "eslint-plugin-mdx": "1.8.2",
        "formik": "2.2.5",
        "fuse.js": "6.4.3",
        "gulp": "4.0.2",
        "identity-obj-proxy": "3.0.0",
        "jest": "26.6.3",
        "lerna": "3.22.1",
        "lodash": "4.17.20",
        "meow": "8.0.0",
        "moment": "2.29.1",
        "mutationobserver-shim": "0.3.7",
        "netlify-cli": "2.68.5",
        "npm-run-all": "4.1.5",
        "postcss-cli": "8.2.0",
        "postcss-safe-important": "1.2.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-is": "17.0.1",
        "react-test-renderer": "17.0.1",
        "rimraf": "3.0.2",
        "semantic-ui": "2.4.2",
        "semantic-ui-react": "2.0.1",
        "serve": "11.3.2",
        "shelljs": "0.8.4",
        "storybook-chromatic": "4.0.2",
        "stylelint": "13.5.0",
        "tachyons-cli": "1.3.3",
        "tachyons-modules": "1.1.10",
        "watch": "1.0.2"
    },
    "engines": {
        "node": ">=12"
    }
}
