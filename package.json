{
    "name": "sg-brand",
    "version": "0.0.0",
    "private": true,
    "repository": "https://github.com/gsoft-inc/sg-brand.git",
    "license": "Apache-2.0",
    "workspaces": {
        "packages": [
            "packages/*",
            "packages/react-components/components/*"
        ]
    },
    "scripts": {
        "bootstrap": "yarn bootstrap:pkg && yarn bootstrap:website",
        "bootstrap:pkg": "yarn install:pkg && yarn setup",
        "bootstrap:website": "yarn install:website",
        "build": "run-p build:*",
        "build:pkg": "lerna run build --parallel",
        "build:sb": "cd packages/react-components && yarn sb:build",
        "build:website": "cd website && yarn build",
        "chromatic": "cd packages/react-components && yarn chromatic:test",
        "chromatic:ci": "cd packages/react-components && yarn chromatic:ci",
        "clean": "run-p clean:*",
        "clean:pkg": "lerna run clean --parallel",
        "clean:website": "cd website && yarn clean",
        "delete-node-modules": "run-s -c delete-node-modules:*",
        "delete-node-modules:pkg": "lerna exec --parallel -- rimraf node_modules",
        "delete-node-modules:root": "rimraf node_modules",
        "delete-node-modules:website": "cd website && rimraf node_modules",
        "delete-yarn-lock": "node ./scripts/delete-yarn-lock",
        "deploy:sb": "cd packages/react-components && yarn sb:deploy",
        "deploy:website": "cd website && yarn deploy:staging",
        "deploy:website:prod": "cd website && yarn deploy:prod",
        "eslint:pkg": "yarn eslint:run --ignore-pattern \"/website\" .",
        "eslint:run": "eslint --ext .js,.jsx",
        "eslint:website": "yarn eslint:run website",
        "install:pkg": "yarn install:without-setup",
        "install:website": "cd website && yarn install",
        "install:without-setup": "yarn install --ignore-scripts",
        "lint": "run-s lint:*",
        "lint:pkg": "yarn eslint:pkg",
        "lint:website": "yarn eslint:website",
        "new-version": "lerna version --exact --no-push",
        "publish:pkg": "lerna publish from-package --exact --loglevel verbose",
        "publish:pkg:next": "yarn publish:pkg --dist-tag next",
        "release:pkg": "yarn publish:pkg",
        "release:pkg:next": "yarn publish:pkg:next",
        "release:sb": "run-s build:sb deploy:sb",
        "release:website": "run-s build:website deploy:website",
        "release:website:prod": "run-s build:website deploy:website:prod",
        "reset": "run-s -c clean delete-yarn-lock delete-node-modules",
        "setup": "lerna run setup --parallel",
        "start": "yarn start:pkg",
        "start:pkg": "lerna run start --parallel",
        "start:sb": "cd packages/react-components && yarn sb:start",
        "start:website": "cd website && yarn start",
        "update": "run-s install:pkg install:website"
    },
    "devDependencies": {
        "@babel/cli": "7.5.5",
        "@babel/core": "7.5.5",
        "@babel/plugin-proposal-class-properties": "7.5.5",
        "@babel/plugin-transform-runtime": "7.5.5",
        "@babel/preset-env": "7.5.5",
        "@babel/preset-react": "7.0.0",
        "@sharegate/browserslist-config-recommended": "1.0.1",
        "@sharegate/css-normalize": "0.3.1",
        "@sharegate/eslint-config-lodash": "1.0.1",
        "@sharegate/eslint-config-react": "1.0.1",
        "@sharegate/eslint-config-recommended": "1.0.1",
        "@sharegate/eslint-config-sort-imports": "1.0.1",
        "@sharegate/stylelint-config-recommended": "1.0.0",
        "@storybook/addon-actions": "5.1.10",
        "@storybook/addon-console": "1.2.1",
        "@storybook/addon-knobs": "5.1.10",
        "@storybook/react": "5.1.10",
        "@svgr/webpack": "4.3.2",
        "babel-eslint": "10.0.2",
        "babel-loader": "8.0.6",
        "babel-plugin-jsx-control-statements": "4.0.0",
        "babel-plugin-named-asset-import": "0.3.2",
        "babel-plugin-react-require": "3.1.1",
        "babel-plugin-transform-react-remove-prop-types": "0.4.24",
        "browserslist": "4.6.6",
        "chalk": "2.4.2",
        "copy-files": "0.1.0",
        "cross-env": "5.2.0",
        "eslint": "6.1.0",
        "eslint-plugin-jsx-control-statements": "2.2.1",
        "gulp": "4.0.2",
        "lerna": "3.16.4",
        "lodash": "4.17.15",
        "moment": "2.24.0",
        "netlify-cli": "2.12.0",
        "normalize.css": "8.0.0",
        "npm-run-all": "4.1.5",
        "react": "16.8.6",
        "react-dates": "20.2.5",
        "react-dom": "16.8.6",
        "rimraf": "2.6.3",
        "semantic-ui": "2.4.2",
        "semantic-ui-react": "0.87.2",
        "shelljs": "0.8.3",
        "storybook-chromatic": "2.1.1",
        "styled-jsx": "3.2.1",
        "stylelint": "10.1.0",
        "tachyons-cli": "1.3.2",
        "tachyons-modules": "1.1.10",
        "watch": "1.0.2"
    },
    "engines": {
        "node": ">=12"
    }
}
