{
  "private": true,
  "name": "sg-brand",
  "version": "0.0.0",
  "repository": "https://github.com/gsoft-inc/sg-brand.git",
  "license": "Apache-2.0",
  "scripts": {
    "start:rc": "run-p start:rc:storybook build:rc:watch",
    "start:rc:storybook": "cd packages/react-components && yarn storybook:start",
    "build:rc": "lerna exec --scope @sharegate/react-* --parallel -- babel src -d dist --ignore stories/",
    "prebuild:rc": "lerna exec --scope @sharegate/react-* --parallel cpx src/**/*.svg dist",
    "build:rc:watch": "yarn build:rc --watch",
    "new-version": "lerna version",
    "diff": "lerna diff"
  },
  "workspaces": [
    "packages/react-components",
    "packages/react-components/packages/*"
  ],
  "devDependencies": {
    "lerna": "3.15.0",
    "npm-run-all": "4.1.5"
  }
}
