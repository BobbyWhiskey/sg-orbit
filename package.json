{
    "private": true,
    "name": "sg-brand",
    "version": "0.0.0",
    "repository": "https://github.com/gsoft-inc/sg-brand.git",
    "license": "Apache-2.0",
    "scripts": {
        "bootstrap": "yarn bootstrap:pkg && yarn bootstrap:website",
        "bootstrap:pkg": "yarn install:pkg && yarn setup",
        "bootstrap:website": "yarn install:website",
        "setup": "lerna run setup --parallel",
        "update": "run-s install:pkg install:website",
        "install:pkg": "yarn install --ignore-scripts",
        "install:website": "cd website && yarn install",
        "start": "yarn start:pkg",
        "start:pkg": "lerna run start --parallel",
        "start:sb": "cd packages/react-components && yarn sb:start",
        "start:website": "cd website && yarn start",
        "build": "run-p build:*",
        "build:pkg": "lerna run build --parallel",
        "build:sb": "cd packages/react-components && yarn sb:build",
        "build:website": "cd website && yarn build",
        "test:chromatic": "cd packages/react-components && yarn chromatic:test",
        "ci": "lerna run ci --parallel",
        "reset": "run-s -c clean delete-yarn-lock delete-node-modules",
        "clean": "run-p clean:*",
        "clean:pkg": "lerna run clean --parallel",
        "clean:website": "cd website && yarn clean",
        "new-version": "lerna version --exact --no-push",
        "release:pkg": "yarn publish:pkg",
        "release:pkg:next": "yarn publish:pkg:next",
        "release:sb": "run-s build:sb deploy:sb",
        "release:website": "run-s build:website deploy:website",
        "release:website:prod": "run-s build:website deploy:website:prod",
        "publish:pkg": "lerna publish from-package --exact --loglevel verbose",
        "publish:pkg:next": "yarn publish:pkg --dist-tag next",
        "deploy:sb": "cd packages/react-components && yarn sb:deploy",
        "deploy:website": "cd website && yarn deploy:staging",
        "deploy:website:prod": "cd website && yarn deploy:prod",
        "delete-node-modules": "run-s -c delete-node-modules:*",
        "delete-node-modules:pkg": "lerna exec --parallel -- rimraf node_modules",
        "delete-node-modules:website": "cd website && rimraf node_modules",
        "delete-node-modules:root": "rimraf node_modules",
        "delete-yarn-lock": "node ./scripts/delete-yarn-lock"
    },
    "workspaces": {
        "packages": [
            "packages/*",
            "packages/react-components/components/*"
        ]
    },
    "devDependencies": {
        "@sharegate/stylelint-config-sg": "0.1.0",
        "@sharegate/browserslist-config-sg": "1.1.1",
        "babel-eslint": "10.0.2",
        "browserslist": "4.6.3",
        "chalk": "2.4.2",
        "cross-env": "5.2.0",
        "eslint": "6.0.1",
        "eslint-plugin-import": "2.18.0",
        "eslint-plugin-jsx-a11y": "6.2.1",
        "eslint-plugin-react": "7.14.2",
        "eslint-plugin-sort-imports-es6-autofix": "0.4.0",
        "lerna": "3.15.0",
        "npm-run-all": "4.1.5",
        "rimraf": "2.6.3",
        "shelljs": "0.8.3",
        "stylelint": "10.1.0"
    }
}
