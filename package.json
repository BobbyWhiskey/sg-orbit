{
  "private": true,
  "name": "sg-brand",
  "version": "0.0.0",
  "repository": "https://github.com/gsoft-inc/sg-brand.git",
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "yarn bootstrap:pkg && yarn bootstrap:website",
    "bootstrap:pkg": "yarn install --ignore-scripts && yarn setup",
    "bootstrap:website": "cd website && yarn install",
    "setup": "lerna run setup --parallel",
    "start": "run-p start:pkg",
    "start:pkg": "lerna run start --parallel",
    "start:rc": "yarn start --scope @sharegate/react-components",
    "start:tachyons": "yarn start --scope @sharegate/tachyons",
    "start:sui-theme": "yarn start --scope @sharegate/semantic-ui-theme",
    "start:website": "",
    "build": "run-p build:pkg build:website",
    "build:pkg": "lerna run build --parallel",
    "build:rc": "yarn build --scope @sharegate/react-components",
    "build:tachyons": "yarn build --scope @sharegate/tachyons",
    "build:sui-theme": "yarn build --scope @sharegate/semantic-ui-theme",
    "build:website": "cd website && yarn build",
    "reset": "run-s clean delete-node-modules",
    "clean": "run-p clean:*",
    "clean:pkg": "lerna run clean --parallel",
    "release:pkg": "lerna publish from-package --exact",
    "release:pkg:next": "yarn new-publish --dist-tag next",
    "release:sb": "",
    "release:website": "",
    "delete-node-modules": "lerna exec --parallel -- rimraf node_modules && rimraf node_modules",
    "link-website": "node scripts/setup-website-yarn-links",
    "diff": "lerna diff"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/react-components/components/*"
    ]
  },
  "devDependencies": {
    "chalk": "2.4.2",
    "lerna": "3.15.0",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "shelljs": "0.8.3"
  }
}
