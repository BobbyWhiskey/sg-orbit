{
    "name": "@sharegate/tachyons",
    "version": "3.0.3",
    "description": "Tachyons customized to follow Sharegate Design Guidelines",
    "repository": "https://github.com/gsoft-inc/sg-brand.git",
    "license": "Apache-2.0",
    "main": "dist/tachyons.css",
    "style": "dist/tachyons.css",
    "publishConfig": {
        "access": "public",
        "directory": "dist"
    },
    "scripts": {
        "setup": "yarn create-dist",
        "start": "yarn watch",
        "build": "run-p build:edge build:transpile",
        "postbuild": "yarn copy-to-dist",
        "build:edge": "run-s build:edge:*",
        "build:edge:css": "tachyons src/tachyons.css --preserve-variables > dist/tachyons.css",
        "build:edge:minify": "tachyons src/tachyons.css --minify --preserve-variables > dist/tachyons.min.css",
        "build:transpile": "run-s build:transpile:*",
        "build:transpile:css": "tachyons src/tachyons.css > dist/tachyons.legacy.css",
        "build:transpile:minify": "tachyons src/tachyons.css --minify > dist/tachyons.legacy.min.css",
        "watch": "watch \"yarn build:edge:css\" ./src/",
        "clean": "yarn clear-dist",
        "prepare": "yarn build",
        "clear-dist": "node scripts/clear-dist",
        "create-dist": "node scripts/create-dist",
        "copy-to-dist": "node scripts/copy-to-dist"
    },
    "peerDependencies": {
        "@sharegate/foundation": "*"
    },
    "devDependencies": {
        "copy-files": "0.1.0",
        "normalize.css": "8.0.0",
        "tachyons-cli": "1.3.2",
        "tachyons-modules": "1.1.10",
        "watch": "1.0.2"
    },
    "gitHead": "df4aa7dbd85db34c7f1d79370e5bff841b04ea4d"
}
