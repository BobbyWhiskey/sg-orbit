{
    "name": "@orbit-ui/tachyons",
    "version": "3.0.1",
    "description": "Custom Tachyons for Sharegate Orbit UI",
    "repository": "https://github.com/gsoft-inc/sg-orbit.git",
    "license": "Apache-2.0",
    "main": "dist/tachyons.css",
    "style": "dist/tachyons.css",
    "publishConfig": {
        "access": "public",
        "directory": "dist"
    },
    "scripts": {
        "setup": "yarn create-dist",
        "start": "yarn watch",
        "prebuild": "yarn clean",
        "build": "run-p build-edge build-legacy build-storybook build-docs",
        "postbuild": "yarn copy-to-dist",
        "build-watch": "run-s build-edge build-storybook build-docs",
        "build-edge": "run-p build-edge:*",
        "build-edge:core": "tachyons src/tachyons.css --preserve-variables > dist/tachyons.css",
        "build-edge:apricot": "tachyons src/tachyons.apricot.css --preserve-variables > dist/apricot.css",
        "build-edge:overcast": "tachyons src/tachyons.overcast.css --preserve-variables > dist/overcast.css",
        "build-edge:desktop": "tachyons src/tachyons.desktop.css --preserve-variables > dist/desktop.css",
        "build-legacy": "run-s build-legacy:*",
        "build-legacy:css": "tachyons src/tachyons.legacy.css > dist/legacy.css",
        "build-legacy:minify": "tachyons src/tachyons.legacy.css --minify > dist/legacy.min.css",
        "build-storybook": "run-p build-storybook:*",
        "build-storybook:apricot": "tachyons src/tachyons.apricot.css --preserve-variables --repeat > storybook/apricot.css",
        "build-storybook:overcast": "tachyons src/tachyons.overcast.css --preserve-variables --repeat > storybook/overcast.css",
        "build-storybook:desktop": "tachyons src/tachyons.desktop.css --preserve-variables --repeat > storybook/desktop.css",
        "build-docs": "run-p build-docs:*",
        "build-docs:colors": "tachyons docs/src/colors.css --preserve-variables > docs/dist/colors.css",
        "build-docs:shadows": "tachyons docs/src/shadows.css --preserve-variables > docs/dist/shadows.css",
        "build-docs:flexbox": "tachyons docs/src/flexbox.css --preserve-variables > docs/dist/flexbox.css",
        "build-docs:borders": "tachyons docs/src/borders.css --preserve-variables > docs/dist/borders.css",
        "build-docs:spacing": "tachyons docs/src/spacing.css --preserve-variables > docs/dist/spacing.css",
        "build-docs:typography": "tachyons docs/src/typography.css --preserve-variables > docs/dist/typography.css",
        "watch": "watch \"yarn build-watch\" ./src/",
        "clean": "yarn clear-dist",
        "prepublishOnly": "yarn copy-license-to-dist",
        "clear-dist": "node scripts/clear-dist",
        "create-dist": "node scripts/create-dist",
        "copy-to-dist": "node scripts/copy-to-dist",
        "copy-license-to-dist": "node ../../scripts/copy-root-license dist"
    },
    "peerDependencies": {
        "@orbit-ui/css-normalize": "*",
        "@orbit-ui/foundation": "*"
    },
    "gitHead": "12c3852000398fe0e93b8ebc2548bcb026478bfa"
}
