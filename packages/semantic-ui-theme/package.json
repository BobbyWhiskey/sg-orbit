{
    "name": "@sharegate/semantic-ui-theme",
    "version": "4.0.5",
    "description": "Semantic UI customized to follow Sharegate Design Guidelines",
    "repository": "https://github.com/gsoft-inc/sg-brand.git",
    "author": "Groupe Sharegate inc.",
    "license": "Apache-2.0",
    "main": "semantic/dist/semantic.js",
    "style": "semantic/dist/semantic.css",
    "files": [
        "semantic/dist",
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "setup": "yarn build",
        "start": "cd semantic && gulp watch",
        "build": "cd semantic && gulp build",
        "postbuild": "yarn copy-to-dist",
        "clean": "run-p clean:*",
        "clean:semantic": "cd semantic && gulp clean",
        "clean:dist": "rimraf dist",
        "copy-to-dist": "node tasks/copy-to-dist"
    },
    "devDependencies": {
        "semantic-ui": "2.4.2"
    }
}
