/*******************************
    User Variable Overrides
*******************************/
@background: @white;
@borderColor: @cloud200;
@borderRadius: .25rem;
@loaderMargin: 0;

@lineHeightOffset: 0;

@paddingLeft: var(--o-ui-scale-delta);
@paddingRight: var(--o-ui-scale-delta);
@padding: var(--o-ui-scale-charlie) var(--o-ui-scale-echo);

@relativeSmall: var(--o-ui-type-scale-8);
@relativeMedium: var(--o-ui-type-scale-7);
@relativeLarge: var(--o-ui-type-scale-6);

@iconPadding: 4px;
@iconMargin: var(--o-ui-scale-hotel);
@iconOpacity: 1;

@disabledOpacity: 1;
@placeholderErrorColor: var(--o-ui-marine-500);
