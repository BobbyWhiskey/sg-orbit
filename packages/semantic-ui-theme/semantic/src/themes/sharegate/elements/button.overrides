/*******************************
        Site Overrides
*******************************/

@successDisabled: @success100;
@negativeDisabled: @alert100;

.ui.button,
.ui.buttons .button {
    min-height: @scaleHotel;
    display: inline-flex;
    border-radius: calc(@scaleHotel / 2);
    align-items: center;
    justify-content: center;
    padding: @verticalPadding 0 (@verticalPadding + @shadowOffset);
}

/* LAYOUT */
/* LAYOUT | Sizes */
/* LAYOUT | Height/Radius | Sizes | Tiny */
.ui.button.tiny,
.ui.button.with-icon.tiny,
.ui.tiny.buttons .button,
.ui.tiny.with-icon.buttons .button {
    min-height: @scaleFoxtrot;
    border-radius: calc(@scaleFoxtrot / 2);
}

/* LAYOUT | Height/Radius | Sizes | Small */
.ui.button.small,
.ui.button.with-icon.small,
.ui.small.buttons .button,
.ui.small.with-icon.buttons .button {
    min-height: @scaleGolf;
    border-radius: calc(@scaleGolf / 2);
}

/* LAYOUT | Height/Radius | Sizes | Large */
.ui.button.large,
.ui.button.with-icon.large,
.ui.large.buttons .button,
.ui.large.with-icon.buttons .button {
    min-height: @scaleIndia;
    border-radius: calc(@scaleIndia / 2);
}

/* LAYOUT | Padding | Sizes | Tiny */
.ui.button.tiny,
.ui.tiny.buttons .button {
    padding-top: 0.125em;
    padding-bottom: 0.125em;
    padding-left: var(--scale-charlie);
    padding-right: var(--scale-charlie);
}

/* LAYOUT | Padding | Sizes | Small */
.ui.button.small,
.ui.small.buttons .button {
    padding-top: 0.375rem;
    padding-bottom: 0.375rem;
    padding-left: var(--scale-delta);
    padding-right: var(--scale-delta);
}

/* LAYOUT | Padding | Sizes | Medium */
.ui.button.medium,
.ui.medium.buttons .button {
    padding-left: var(--scale-echo);
    padding-right: var(--scale-echo);
}

/* LAYOUT | Padding | Sizes | Large */
.ui.button.large,
.ui.large.buttons .button {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: var(--scale-foxtrot);
    padding-right: var(--scale-foxtrot);
}

/* LAYOUT | Circular */
/* LAYOUT | Circular/Default */
.ui.button.circular,
.ui.button.with-icon.circular,
.ui.button.with-icon.without-text.circular {
    padding: 0!important;
    font-size: @typeScale6;
    min-height: @scaleHotel;
    min-width: @scaleHotel;
}

/* LAYOUT | Circular/Tiny */
.ui.button.mini.circular,
.ui.button.with-icon.mini.circular {
    font-size: @typeScale9;
    min-height: @scaleEcho;
    min-width: @scaleEcho;
}

/* LAYOUT | Circular/Tiny */
.ui.button.tiny.circular,
.ui.button.with-icon.tiny.circular {
    font-size: @typeScale8;
    min-height: @scaleFoxtrot;
    min-width: @scaleFoxtrot;
}

/* LAYOUT | Circular/Small */
.ui.button.small.circular,
.ui.button.with-icon.small.circular {
    font-size: @typeScale7;
    min-height: @scaleGolf;
    min-width: @scaleGolf;
}

/* LAYOUT | Circular/Large */
.ui.button.large.circular,
.ui.button.with-icon.large.circular {
    font-size: @typeScale6;
    min-height: @scaleIndia;
    min-width: @scaleIndia;
}

/* LAYOUT | Naked */
.ui.button.naked {
    background-color: @transparent;
    color: initial;
    box-shadow: 0px 0px 0px 1px transparent inset;
}

/* LAYOUT | Naked/Basic */
.ui.button.basic.naked,
.ui.button.naked.basic,
.ui.buttons.naked.basic .button,
.ui.buttons.naked.basic .button {
    background-color: @transparent!important;
}

/* LAYOUT | Naked | STATE | Pseudo */
.ui.button.naked:hover,
.ui.button.naked:focus,
.ui.button.naked.active {
    background-color: @transparent;
    color: initial;
    box-shadow: 0px 0px 0px 1px transparent inset;
}

/* LAYOUT | Naked/Ghost | STATE | Pseudo */
.ui.button.naked.ghost:hover,
.ui.button.naked.ghost:focus,
.ui.button.naked.ghost.active {
    background-color: @transparent;
    color: initial;
    box-shadow: 0px 0px 0px 1px transparent inset;
}

/* LAYOUT | Naked | STATE | Disabled */
.ui.button.disabled.naked,
.ui.button.naked:disabled,
.ui.buttons.naked .button.disabled,
.ui.buttons.naked .button:disabled {
