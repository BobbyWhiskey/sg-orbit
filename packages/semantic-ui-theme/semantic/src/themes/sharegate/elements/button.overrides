/* STATE | Active | SKIN | Basic */
.ui.button.basic:hover,
.ui.button.basic:focus,
.ui.button.basic.active {
    background-color: @white!important;
    box-shadow: 0px 0px 0px @basicBorderSize @marine900 inset!important;
